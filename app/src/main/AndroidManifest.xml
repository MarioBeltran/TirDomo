            android:name="com.example.mario.tirdomo.EditControlNameActivity"
            android:parentActivityName="com.example.mario.tirdomo.SelectModelActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.example.mario.tirdomo.TemplateControlir1Activity"
            android:parentActivityName="com.example.mario.tirdomo.IrControlsActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.example.mario.tirdomo.TemplateControlir2Activity"
            android:label="@string/title_activity_template_controlir2"
            android:parentActivityName="com.example.mario.tirdomo.IrControlsActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.example.mario.tirdomo.EditButton1Activity"
            android:parentActivityName="com.example.mario.tirdomo.TemplateControlir2Activity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.example.mario.tirdomo.NumericButtonsActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.CustomTheme" />
        <activity
            android:name="com.example.mario.tirdomo.ExtraButtonsActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.CustomTheme" />
        <activity
            android:name="com.example.mario.tirdomo.SettingsActivity"
            android:parentActivityName="com.example.mario.tirdomo.MainActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.example.mario.tirdomo.Favorites1Activity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.CustomTheme" />
