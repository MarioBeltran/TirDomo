            android:name="com.example.mario.tirdomo.UpdateDeviceActivity"
            android:parentActivityName="com.example.mario.tirdomo.InfoDevicesActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.example.mario.tirdomo.IrControlsActivity"
            android:label="@string/title_activity_ir_controls"
            android:parentActivityName="com.example.mario.tirdomo.MainActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.example.mario.tirdomo.AddControlirActivity"
            android:parentActivityName="com.example.mario.tirdomo.IrControlsActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.example.mario.tirdomo.SelectDeviceActivity"
            android:parentActivityName="com.example.mario.tirdomo.AddControlirActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.example.mario.tirdomo.SelectModelActivity"
            android:parentActivityName="com.example.mario.tirdomo.SelectDeviceActivity"
            android:screenOrientation="portrait" />
