<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.mario.tirdomo.AddDevice3Activity"
    tools:layout_editor_absoluteY="81dp">

    <TextView
        android:id="@+id/textView7"
        android:layout_width="360dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/msg1_add_device3"
        android:textColor="@android:color/black"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/editTextIpLan"
        app:layout_constraintStart_toStartOf="@+id/editTextIpLan"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="14dp"
        android:layout_marginStart="30dp"
        android:gravity="right"
        android:text="IP LAN:"
        android:textColor="@android:color/black"
        android:textSize="20dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/editTextIpLan"
        app:layout_constraintEnd_toStartOf="@+id/editTextIpLan"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/editTextIpLan"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="8dp"
        android:text="Ip LAN"
        android:textSize="20dp"
        android:singleLine="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textView8"
        app:layout_constraintTop_toBottomOf="@+id/textView7" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="14dp"
        android:gravity="right"
        android:text="GATEWAY:"
        android:textColor="@android:color/black"
        android:textSize="20dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/editTexteGateway"
        app:layout_constraintEnd_toStartOf="@+id/editTexteGateway"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/editTexteGateway"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:text="Network"
        android:textSize="20dp"
        android:singleLine="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textView9"
        app:layout_constraintTop_toBottomOf="@+id/editTextIpLan" />

    <TextView
        android:id="@+id/textView14"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="14dp"
        android:gravity="right"
        android:text="NETMASK:"
        android:textColor="@android:color/black"
        android:textSize="20dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/editTextNetmask"
        app:layout_constraintEnd_toStartOf="@+id/editTextNetmask"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/editTextNetmask"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:text="Netmask"
        android:textSize="20dp"
        android:singleLine="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textView14"
        app:layout_constraintTop_toBottomOf="@+id/editTexteGateway" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="14dp"
        android:layout_marginStart="40dp"
        android:gravity="right"
        android:text="PORT:"
        android:textColor="@android:color/black"
        android:textSize="20dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/editTextPort"
        app:layout_constraintEnd_toStartOf="@+id/editTextPort"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/editTextPort"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:text="Port"
        android:textSize="20dp"
        android:singleLine="true"
        app:layout_constraintBottom_toTopOf="@+id/textView11"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textView10" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="360dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="47dp"
        android:gravity="center"
        android:text="@string/msg2_add_device3"
        android:textColor="@android:color/black"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/editTextPort"
        app:layout_constraintStart_toStartOf="@+id/editTextPort"
        app:layout_constraintTop_toBottomOf="@+id/editTextNetmask" />

    <EditText
        android:id="@+id/editTextWifiSsid"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:hint="SSID"
        android:textSize="20dp"
        android:singleLine="true"
        app:layout_constraintEnd_toStartOf="@+id/editTextPort"
        app:layout_constraintStart_toStartOf="@+id/editTextPort"
        app:layout_constraintTop_toBottomOf="@+id/textView11" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/msg3_add_device3"
        android:textColor="@android:color/holo_red_light"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextWifiSsid" />

    <EditText
        android:id="@+id/editTextWifiPassword"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="30dp"
        android:layout_marginStart="30dp"
        android:hint="@string/msg4_add_device3"
        android:singleLine="true"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView12" />

    <Button
        android:id="@+id/button_Setup"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="3dp"
        android:text="@string/button_add_device3"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:onClick="buttonSetUp"/>

</android.support.constraint.ConstraintLayout>
